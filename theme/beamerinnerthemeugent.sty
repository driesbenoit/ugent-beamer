% Required package 
\RequirePackage{tikz}
\RequirePackage{xcolor}
\RequirePackage{graphicx}

% Introduce new conditional for title page(s)
\newif\ifintitleframe
\intitleframefalse

% Introduce new conditional for section pages
\newif\ifinsectionframe
\insectionframefalse % Set to false

% Introduce new conditional for section pages
\newif\ifinlogoframe
\inlogoframefalse % Set to false

% Create \titleframe macro that sets flag
% before creating a new title page
\newcommand{\titleframe}{
  \intitleframetrue
  \frame{\titlepage}
  \intitleframefalse
}

% Create logoframe macro that sets flag
% before creating a new logo page
\newcommand{\logoframe}{
    \inlogoframetrue
    \frame{
        \begin{tikzpicture}
            \useasboundingbox (0,0) rectangle(\the\paperwidth,\the\paperheight);
            \node[anchor=north west,inner sep=0mm] at (.1*\the\paperwidth,0.95*\the\paperheight) {\includegraphics[height=\textheight]{ugent-\beamer@languagevalue}};
        \end{tikzpicture}
    }
    \inlogoframefalse
}

% Create \sectionframe macro that sets flag
% before creating a new section page
\newcommand{\sectionframe}{
  \insectionframetrue
  \frame{\sectionpage}
  \insectionframefalse
}

% Define background
\setbeamertemplate{background}{
    \begin{tikzpicture}[node distance=5mm]
    \useasboundingbox (0,0) rectangle(\the\paperwidth,\the\paperheight);
    \fill[ugentwhite,opacity=1] (0,0) rectangle(\the\paperwidth,\the\paperheight);
    \ifintitleframe
        \ifbeamer@faculty
            \fill[color=ugentblue] (.05*\the\paperwidth,.2*\the\paperheight) rectangle (\the\paperwidth,.85*\the\paperheight);
            \node[anchor=north west,inner sep=0mm] at (.018*\the\paperwidth,\the\paperheight) {\includegraphics[height=.2\textheight]{\beamer@facultyvalue-\beamer@languagevalue}};
        \else
            \fill[color=ugentblue] (.05*\the\paperwidth,.2*\the\paperheight) rectangle (\the\paperwidth,\the\paperheight);
        \fi
        \node[anchor=south west,inner sep=0mm] (ugent) at (.018*\the\paperwidth,-0.02*\the\paperheight) {\includegraphics[height=.27\textheight]{ugent-\beamer@languagevalue}};
    \else\ifinsectionframe
        \fill[color=ugentblue] (.05*\the\paperwidth,.2*\the\paperheight) rectangle (\the\paperwidth,\the\paperheight);
        \node[anchor=south west,inner sep=0mm] at (.018*\the\paperwidth,-0.02*\the\paperheight) {\includegraphics[height=.27\textheight]{ugent-\beamer@languagevalue}};
    \fi\fi
    \end{tikzpicture}
}

